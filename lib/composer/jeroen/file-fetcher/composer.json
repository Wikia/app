{
	"name": "jeroen/file-fetcher",
	"type": "library",
	"description": "Simple file fetching interface",
	"keywords": [
		"file fetcher",
		"file_get_contents",
		"cache",
		"wget",
		"curl"
	],
	"homepage": "https://github.com/JeroenDeDauw/FileFetcher",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.0",
		"jeroen/simple-cache": "~2.0",
		"psr/log": "~1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~6.1",
		"squizlabs/php_codesniffer": "~2.1",
		"phpmd/phpmd": "~2.1",
		"ockcyp/covers-validator": "~0.6",
		"wmde/psr-log-test-doubles": "~2.1"
	},
	"autoload": {
		"psr-4": {
			"FileFetcher\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "4.2.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"vendor/bin/phpunit",
			"vendor/bin/covers-validator"
		],
		"cs": [
			"@phpcs",
			"@phpmd"
		],
		"ci": [
			"@test",
			"@cs"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/,tests/unit/ text phpmd.xml"
		]
	}
}
