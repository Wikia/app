{
    "basePath": "http://www.wikia.com",
    "swaggerVersion": "1.1",
    "apiVersion": "0.2",
    "resourcePath": "ArticlesApi",
    "apis": [
        {
            "path": "/wikia.php?controller=ArticlesApi&method=getDetails",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Get details about one or more articles",
                    "nickname": "getDetails",
                    "responseClass": "ExpandedArticleResultSet",
                    "parameters": [
                        {
                            "name": "ids",
                            "description": "A string with a comma-separated list of article IDs",
                            "allowMultiple": true,
                            "dataType": "Array",
                            "paramType": "query",
                            "required": true,
                            "defaultValue": "50"
                        },
                        {
                            "name": "titles",
                            "description": "Titles with underscores instead of spaces, comma-separated",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        },
                        {
                            "name": "abstract",
                            "description": "The desired length for the article's abstract",
                            "allowMultiple": false,
                            "dataType": "int",
                            "paramType": "query",
                            "required": false,
                            "allowableValues": {
                                "valueType": "RANGE",
                                "min": "0",
                                "max": "500"
                            },
                            "defaultValue": "100"
                        },
                        {
                            "name": "width",
                            "description": "The desired width for the thumbnail",
                            "allowMultiple": false,
                            "dataType": "int",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": "200"
                        },
                        {
                            "name": "height",
                            "description": "The desired height for the thumbnail",
                            "allowMultiple": false,
                            "dataType": "int",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": "200"
                        }
                    ],
                    "errorResponses": [
                        {
                            "reason": "Missing ids parameter or abstract out of range",
                            "code": 400
                        }
                    ]
                }
            ],
            "description": "Fetch top articles for the current wiki"
        },
        {
            "path": "/wikia.php?controller=ArticlesApi&method=getList",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Get the most viewed articles for the current wiki ",
                    "nickname": "getList",
                    "responseClass": "UnexpandedListArticleResultSet",
                    "parameters": [
                        {
                            "name": "category",
                            "description": "Return only articles belonging to the provided valid category",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        },
                        {
                            "name": "namespaces",
                            "description": "Page namespace number, see more: http://www.mediawiki.org/wiki/help:namespaces",
                            "allowMultiple": true,
                            "dataType": "Array",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        },
                        {
                            "name": "limit",
                            "description": "The maximum number of results to fetch",
                            "allowMultiple": false,
                            "dataType": "int",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": "25"
                        },
                        {
                            "name": "offset",
                            "description": "If provided, lists results starting with the provided offset position",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        }
                    ],
                    "errorResponses": [
                        {
                            "reason": "Namespaces or category parameter is invalid",
                            "code": 400
                        },
                        {
                            "reason": "Results not found",
                            "code": 404
                        }
                    ]
                }
            ],
            "description": "Get the most viewed articles for the current wiki"
        },
        {
            "path": "/wikia.php?controller=ArticlesApi&method=getList&expand=1",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Fetch a list of pages on the current wiki",
                    "nickname": "getList",
                    "responseClass": "ExpandedListArticleResultSet",
                    "parameters": [
                        {
                            "name": "category",
                            "description": "Return only articles belonging to the provided valid category",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        },
                        {
                            "name": "namespaces",
                            "description": "Page namespace number, see more: http://www.mediawiki.org/wiki/help:namespaces",
                            "allowMultiple": true,
                            "dataType": "Array",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        },
                        {
                            "name": "limit",
                            "description": "The maximum number of results to fetch",
                            "allowMultiple": false,
                            "dataType": "int",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": "25"
                        },
                        {
                            "name": "offset",
                            "description": "Offset to start fetching data from",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        }
                    ],
                    "errorResponses": [
                        {
                            "reason": "Namespaces or category parameter is invalid",
                            "code": 400
                        },
                        {
                            "reason": "Results not found",
                            "code": 404
                        }
                    ]
                }
            ],
            "description": "Fetch a list of pages on the current wiki"
        },
        {
            "path": "/wikia.php?controller=ArticlesApi&method=getTop",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Fetch the most viewed articles on this wiki",
                    "nickname": "getTop",
                    "responseClass": "UnexpandedArticleResultSet",
                    "parameters": [
                        {
                            "name": "namespaces",
                            "description": "Page namespace number, see more: http://www.mediawiki.org/wiki/help:namespaces",
                            "allowMultiple": true,
                            "dataType": "Array",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        },
                        {
                            "name": "category",
                            "description": "Specifying a title corresponding to an existing for this value will display only articles that pertain to this category",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        }
                    ],
                    "errorResponses": [
                        {
                            "reason": "Invalid parameter or category",
                            "code": 400
                        },
                        {
                            "reason": "Results not found",
                            "code": 404
                        }
                    ]
                }
            ],
            "description": "Fetch the most viewed articles on this wiki"
        },
        {
            "path": "/wikia.php?controller=ArticlesApi&method=getTop&expand=1",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Fetch the most viewed articles for this wiki, with additional information for each article",
                    "nickname": "getTop",
                    "responseClass": "ExpandedArticleResultSet",
                    "parameters": [
                        {
                            "name": "namespaces",
                            "description": "Page namespace number, see more: http://www.mediawiki.org/wiki/help:namespaces",
                            "allowMultiple": true,
                            "dataType": "Array",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        },
                        {
                            "name": "category",
                            "description": "Specifying a title corresponding to an existing for this value will display only articles that pertain to this category",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        }
                    ],
                    "errorResponses": [
                        {
                            "reason": "Invalid parameter or category",
                            "code": 400
                        },
                        {
                            "reason": "Results not found",
                            "code": 404
                        }
                    ]
                }
            ],
            "description": "Fetch the most viewed articles for this wiki, with additional information provided for each article"
        },
        {
            "path": "/wikia.php?controller=ArticlesApi&method=getTopByHub",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Get the top articles by pageviews for a hub optionally filtering by namespace and/or language",
                    "nickname": "getTopByHub",
                    "responseClass": "HubArticleResultSet",
                    "parameters": [
                        {
                            "name": "hub",
                            "description": "The name of the vertical (e.g. Gaming, Entertainment, Lifestyle, etc.) to use as a filter",
                            "allowMultiple": false,
                            "dataType": "Array",
                            "paramType": "query",
                            "required": true,
                            "defaultValue": "gaming"
                        },
                        {
                            "name": "lang",
                            "description": "Specifies the desired language of the resulting wikis, by language code",
                            "allowMultiple": true,
                            "dataType": "string",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        },
                        {
                            "name": "namespaces",
                            "description": "Page namespace number, see more: http://www.mediawiki.org/wiki/help:namespaces",
                            "allowMultiple": true,
                            "dataType": "Array",
                            "paramType": "query",
                            "required": false,
                            "defaultValue": ""
                        }
                    ],
                    "errorResponses": [
                        {
                            "reason": "Missing 'hub' parameter, number of languages exceeded or not on www.wikia.com domain",
                            "code": 400
                        },
                        {
                            "reason": "Results not found",
                            "code": 404
                        }
                    ]
                }
            ],
            "description": "View the most popular wikis in a given hub. Available only on the www.wikia.com main domain."
        }
    ],
    "models": {
        "UnexpandedArticleResultSet": {
            "id": "UnexpandedArticleResultSet",
            "properties": {
                "items": {
                    "type": "Array",
                    "description": "Standard container name for element collection (list)",
                    "required": true,
                    "items": {
                        "$ref": "UnexpandedArticle"
                    }
                },
                "basepath": {
                    "type": "string",
                    "description": "Common URL prefix for relative URLs",
                    "required": true
                }
            }
        },
        "UnexpandedArticle": {
            "id": "UnexpandedArticle",
            "properties": {
                "id": {
                    "type": "int",
                    "description": "An internal identification number for Article",
                    "required": true
                },
                "title": {
                    "type": "string",
                    "description": "The title of the article",
                    "required": true
                },
                "url": {
                    "type": "string",
                    "description": "The relative URL of the Article. Absolute URL: obtained from combining relative URL with basepath attribute from response.",
                    "required": true
                },
                "ns": {
                    "type": "int",
                    "description": "The namespace value of the given article",
                    "required": true
                }
            }
        },
        "ExpandedArticleResultSet": {
            "id": "ExpandedArticleResultSet",
            "properties": {
                "items": {
                    "type": "Array",
                    "description": "Standard container name for element collection (list)",
                    "required": true,
                    "items": {
                        "$ref": "ExpandedArticle"
                    }
                },
                "basepath": {
                    "type": "string",
                    "description": "Common URL prefix for relative URLs",
                    "required": true
                }
            }
        },
        "ExpandedArticle": {
            "id": "ExpandedArticle",
            "properties": {
                "id": {
                    "type": "int",
                    "description": "An internal identification number for Article",
                    "required": true
                },
                "title": {
                    "type": "string",
                    "description": "The title of the article",
                    "required": true
                },
                "url": {
                    "type": "string",
                    "description": "The relative URL of the Article. Absolute URL: obtained from combining relative URL with basepath attribute from response.",
                    "required": true
                },
                "ns": {
                    "type": "int",
                    "description": "The namespace value of the given article",
                    "required": true
                },
                "revision": {
                    "type": "Revision",
                    "description": "The latest revision for this article",
                    "required": true
                },
                "comments": {
                    "type": "int",
                    "description": "Number of comments on this article",
                    "required": true
                },
                "type": {
                    "type": "string",
                    "description": "The functional type of the document (e.g. article, file, category)",
                    "required": true
                },
                "abstract": {
                    "type": "string",
                    "description": "A snippet of text from the beginning of the article",
                    "required": true
                },
                "thumbnail": {
                    "type": "string",
                    "description": "The absolute URL of the thumbnail"
                },
                "original_dimensions": {
                    "type": "OriginalDimension",
                    "description": "The original dimensions of the thumbnail for the article, if available"
                }
            }
        },
        "Revision": {
            "id": "Revision",
            "properties": {
                "id": {
                    "type": "int",
                    "description": "An internal identification number for Revision",
                    "required": true
                },
                "user": {
                    "type": "string",
                    "description": "The name of the user who made the revision",
                    "required": true
                },
                "user_id": {
                    "type": "int",
                    "description": "An internal identification number for User",
                    "required": true
                },
                "timestamp": {
                    "type": "int",
                    "description": "The Unix timestamp (in seconds) that the revision was made",
                    "required": true
                }
            }
        },
        "OriginalDimension": {
            "id": "OriginalDimension",
            "properties": {
                "width": {
                    "type": "int",
                    "description": "Original width of the thumbnail, in pixels",
                    "required": true
                },
                "height": {
                    "type": "int",
                    "description": "Original height of the thumbnail, in pixels",
                    "required": true
                }
            }
        },
        "HubArticleResultSet": {
            "id": "HubArticleResultSet",
            "properties": {
                "items": {
                    "type": "Array",
                    "description": "Standard container name for element collection (list)",
                    "required": true,
                    "items": {
                        "$ref": "HubArticleResult"
                    }
                }
            }
        },
        "HubArticleResult": {
            "id": "HubArticleResult",
            "properties": {
                "wiki": {
                    "type": "Wikia",
                    "description": "Wikia info object",
                    "required": true
                },
                "articles": {
                    "type": "Array",
                    "description": "Article list",
                    "required": true,
                    "items": {
                        "$ref": "HubArticle"
                    }
                }
            }
        },
        "Wikia": {
            "id": "Wikia",
            "properties": {
                "id": {
                    "type": "int",
                    "description": "An internal identification number for Wikia",
                    "required": true
                },
                "name": {
                    "type": "string",
                    "description": "Wikia name",
                    "required": true
                },
                "language": {
                    "type": "string",
                    "description": "Wikia language",
                    "required": true
                },
                "domain": {
                    "type": "string",
                    "description": "Wikia base URL",
                    "required": true
                }
            }
        },
        "HubArticle": {
            "id": "HubArticle",
            "properties": {
                "id": {
                    "type": "int",
                    "description": "An internal identification number for Article",
                    "required": true
                },
                "ns": {
                    "type": "int",
                    "description": "The namespace value of the given article",
                    "required": true
                }
            }
        },
        "UnexpandedListArticleResultSet": {
            "id": "UnexpandedListArticleResultSet",
            "properties": {
                "items": {
                    "type": "Array",
                    "description": "Standard container name for element collection (list)",
                    "required": true,
                    "items": {
                        "$ref": "UnexpandedArticle"
                    }
                },
                "offset": {
                    "type": "string",
                    "description": "Offset to start next batch of data",
                    "required": true
                },
                "basepath": {
                    "type": "string",
                    "description": "Common URL prefix for relative URLs",
                    "required": true
                }
            }
        },
        "ExpandedListArticleResultSet": {
            "id": "ExpandedListArticleResultSet",
            "properties": {
                "items": {
                    "type": "Array",
                    "description": "Standard container name for element collection (list)",
                    "required": true,
                    "items": {
                        "$ref": "ExpandedArticle"
                    }
                },
                "offset": {
                    "type": "string",
                    "description": "Offset value of next datum (used for pagination in subsequent requests)",
                    "required": true
                },
                "basepath": {
                    "type": "string",
                    "description": "Common URL prefix for relative URLs",
                    "required": true
                }
            }
        }
    }
}