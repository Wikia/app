<div id="blackout_{{id}}" class="modal-blackout">
    <div id="{{id}}" class="modal {{size}} {{#classes}}{{.}} {{/classes}}" {{#data}}data-{{key}}="{{value}}"{{/data}}>
        <header>
            {{#closeButton}}
                <a href="#" class="close">{{closeText}}</a>
            {{/closeButton}}
            <h3>{{title}}</h3>
        </header>
        <section>
            {{{content}}}
        </section>
        <footer>
            {{#altLink}}
                <a id="{{altLink.id}}" href="{{altLink.href}}">{{altLink.text}}</a>
            {{/altLink}}
            <div class="buttons">
                {{{primaryBtn}}}
                {{{secondBtn}}}
            </div>
        </footer>
    </div>
</div>
