{
	/* Common */

	// Enforcing
	"eqeqeq": true,
	"latedef": true,
	"noarg": true,
	"nonew": true,
	"undef": true,
	"unused": true,

	/* Local */

	// Disabled style checks deprecated in JSHint 3,
	// done by node-jscs instead
	// - Enforcing
	"camelcase": false,
	"curly": false,
	"immed": false,
	"newcap": false,
	"noempty": false,
	"quotmark": false,
	"trailing": false,
	// - Relaxing
	"multistr": true,
	"sub": true,
	"smarttabs": true,
	// - Legacy
	"nomen": false,
	"onevar": false,

	// Enforcing
	"bitwise": true,
	"forin": false,
	"plusplus": false,
	"regexp": true,
	"strict": false,
	// Relaxing
	"es5": false,
	// Environment
	"browser": true,
	"jquery": true,

	"predef": [
		"OO",
		"ve",
		"unicodeJS",
		"QUnit"
	]
}
