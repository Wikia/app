<figure class="article-thumb {{figureClass}} {{#showInfoIcon}}show-info-icon{{/showInfoIcon}}" style="width: {{width}}px">
	{{{thumbnail}}}

	<figcaption>
		{{#showInfoIcon}}
			<a href="{{filePageLink}}" class="sprite info-icon"></a>
		{{/showInfoIcon}}
		{{#title}}
			<p class="title">{{title}}</p>
		{{/title}}
		{{#caption}}
			<p class="caption">{{{caption}}}</p>
		{{/caption}}
	</figcaption>
</figure>