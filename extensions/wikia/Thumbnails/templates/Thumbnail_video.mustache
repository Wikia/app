{{#showInfoIcon}}
<div class="article-thumb-wrapper">
{{/showInfoIcon}}
<a
	href="{{linkHref}}"
	class="video video-thumbnail {{size}} {{#linkClasses}}{{.}} {{/linkClasses}}"
	{{#linkAttrs}} {{{.}}}{{/linkAttrs}}>

	{{{imgTag}}}
	{{#noscript}}<noscript>{{{noscript}}}</noscript>{{/noscript}}

	<span class="duration" {{#durationAttrs}}{{{.}}} {{/durationAttrs}}>{{duration}}</span>
	<span class="play-circle"></span>

	{{#metaAttrs}}<meta itemprop="{{itemprop}}" content="{{content}}">{{/metaAttrs}}
</a>
{{#showInfoIcon}}
<a href="{{linkHref}}" class="sprite info-icon"></a>
</div>
{{/showInfoIcon}}
