<figure class="article-media-thumbnail"{{#mediaAttr}} data-component="article-media-thumbnail" data-attrs="{{mediaAttr}}"{{/mediaAttr}} data-gallery-ref="{{galleryRef}}">
	<a href="{{href}}">
		<img class="article-media-placeholder lazyload"
		     src="data:image/svg+xml;charset=utf-8,%3Csvg xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg' viewBox%3D'0 0 {{width}} {{height}}'%2F%3E"
		     alt="{{title}}"
		     data-src="{{url}}"
			{{#width}} width="{{width}}"{{/width}}
			{{#height}} height="{{height}}"{{/height}}>
		<noscript>
			<img src="{{url}}" alt="{{title}}"{{#width}} width="{{width}}"{{/width}}{{#height}} height="{{height}}"{{/height}}>
		</noscript>
	</a>
	{{#caption}}
		<figcaption>{{{caption}}}</figcaption>
	{{/caption}}
</figure>