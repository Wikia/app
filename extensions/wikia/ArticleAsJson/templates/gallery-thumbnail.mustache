<figure class="article-media-thumbnail{{#isOgg}} is-ogg{{/isOgg}}" data-ref="{{galleryRef}}" data-file="{{fileName}}">
	{{#isOgg}}
		<a href="{{url}}">{{{downloadIcon}}}</a>
	{{/isOgg}}

	{{^isOgg}}
		<a href="{{href}}">
			<img class="article-media-placeholder lazyload"
				src="data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='-12 -12 48 48' fill='%23fff' width='{{thumbSize}}' height='{{thumbSize}}'%3e%3cg fill-rule='evenodd'%3e%3cpath d='M3 4h18v8.737l-3.83-3.191a.916.916 0 0 0-1.282.108l-4.924 5.744-3.891-3.114a.92.92 0 0 0-1.146 0L3 14.626V4zm19-2H2a1 1 0 0 0-1 1v18a1 1 0 0 0 1 1h20a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1z'/%3e%3cpath d='M9 10c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2'/%3e%3c/g%3e%3c/svg%3e"
				alt="{{title}}"
				data-src="{{thumbnailUrl}}"
				width="{{thumbSize}}"
				height="{{thumbSize}}">
			<noscript>
				<img src="{{thumbnailUrl}}" alt="{{title}}" width="300" height="300">
			</noscript>
			{{#isVideo}}
				<div class="video-icon-container">
					<svg class="wds-player-icon-play-medium" viewBox="0 0 180 180">
						<g fill="none" fill-rule="evenodd">
							<g opacity=".9" transform="rotate(90 75 90)">
								<g fill="#000" filter="url(#a)"><rect id="b" width="150" height="150" rx="75"></rect></g>
								<g fill="#FFF"><rect id="b" width="150" height="150" rx="75"></rect></g>
							</g>
							<path fill="#00D6D6" fill-rule="nonzero" d="M80.87 58.006l34.32 25.523c3.052 2.27 3.722 6.633 1.496 9.746a6.91 6.91 0 0 1-1.497 1.527l-34.32 25.523c-3.053 2.27-7.33 1.586-9.558-1.527A7.07 7.07 0 0 1 70 114.69V63.643c0-3.854 3.063-6.977 6.84-6.977 1.45 0 2.86.47 4.03 1.34z"></path>
						</g>
					</svg>
				</div>
			{{/isVideo}}
		</a>
	{{/isOgg}}
</figure>