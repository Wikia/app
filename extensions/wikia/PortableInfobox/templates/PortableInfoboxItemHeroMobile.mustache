<div class="portable-infobox-item item-type-hero">
	{{#title}}
		<hgroup class="portable-infobox-hero-title-wrapper portable-infobox-item-margins">
			<h2 class="portable-infobox-hero-title">{{{value}}}</h2>
			{{#image.caption}}
			<h3 class="portable-infobox-hero-caption">{{{image.caption}}}</h3>
			{{/image.caption}}
		</hgroup>
	{{/title}}
	{{#image}}
	<img src="data:image/gif;base64,R0lGODlhAQABAIABAAAAAP///yH5BAEAAAEALAAAAAABAAEAQAICTAEAOw%3D%3D"
	     data-src="{{thumbnail}}" class="portable-infobox-image lazy media article-media" alt="{{alt}}"
	     data-image-key="{{name}}" data-image-name="{{name}}" data-ref="{{ref}}"
	     data-params='[{"name":"{{name}}", "full":"{{url}}"}]'/>
	{{/image}}
</div>
