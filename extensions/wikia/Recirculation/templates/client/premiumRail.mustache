<section class="rail-module premium-recirculation-rail">
	<h2 class="has-icon">
		{{{fandomHeartSvg}}}
		{{title}}
	</h2>
	<ul class="thumbnails">
		{{#items}}
			<li class="item item-{{source}}"
				data-flag="{{flag}}"
				data-index="{{index}}"
				data-source="{{source}}"
				{{#id}} data-id="{{id}}" {{/id}}
				{{#meta}} data-meta="{{meta}}" {{/meta}}
			>
				<a href="{{url}}">
					<div class="image image-thumbnail placeholder-thumbnail fluid small">
						{{#thumbnail}}
							<img src="{{thumbnail}}" alt="{{title}}" itemprop="thumbnail">
						{{/thumbnail}}
						{{#isVideo}}
							<div class="video-icon-container">
								<svg class="wds-player-icon-play-tiny" viewBox="0 0 180 180" width="100%" height="100%">
									<g fill="none" fill-rule="evenodd">
										<g opacity=".9" transform="rotate(90 75 90)">
											<g fill="#000" filter="url(#a)"><rect id="b" width="150" height="150" rx="75"></rect></g>
											<g fill="#FFF"><rect id="b" width="150" height="150" rx="75"></rect></g>
										</g>
										<path fill="#00D6D6" fill-rule="nonzero" d="M80.87 58.006l34.32 25.523c3.052 2.27 3.722 6.633 1.496 9.746a6.91 6.91 0 0 1-1.497 1.527l-34.32 25.523c-3.053 2.27-7.33 1.586-9.558-1.527A7.07 7.07 0 0 1 70 114.69V63.643c0-3.854 3.063-6.977 6.84-6.977 1.45 0 2.86.47 4.03 1.34z"></path>
									</g>
								</svg>
							</div>
						{{/isVideo}}
					</div>
					<div class="content">
						<div class="title" title="{{title}}">{{title}}</div>
						{{#presented_by}}
							<div class="recirculation-sponsored-footer">
								Sponsored by {{presented_by}}
							</div>
						{{/presented_by}}
					</div>
				</a>
			</li>
		{{/items}}
	</ul>
</section>
