{{#viewedUsersInfo}}
	<a href="{{profileUrl}}"
	   class="wds-avatar-stack__avatar{{#hasUsers}} chatter{{/hasUsers}}"{{^hasUsers}}
	   title="{{username}}"{{/hasUsers}}>
		<img class="wds-avatar" src="{{avatarUrl}}"/>
	</a>
{{/viewedUsersInfo}}
{{#hasUsers}}
	{{! We need to render popover content outside <a> element as it contains other anchor elements }}
	{{#viewedUsersInfo}}
		<div class="UserStatsMenu">
			<div class="info">
				<img data-src="{{avatarUrl}}" src="{{blankImgUrl}}" class="avatar" width="24"
					 height="24"/>
				<ul>
					<li class="username" data-user-prop="username">{{username}}</li>
					<li data-msg-param="{{editCount}}" class="edits"
						data-msg-id="chat-edit-count"> </li>
					<li data-msg-param="{{since}}" class="since" data-msg-id="chat-member-since"> </li>
				</ul>
			</div>
			<div class="actions">
				<ul class="regular-actions">
					<li class="profilepage {{profileType}}">
						<a href="{{profileUrl}}" target="_blank">
							{{{profileIcon}}}
							<span class="label" data-msg-id="{{profileTypeMsg}}"></span>
						</a>
					</li>
					<li class="contribs">
						<a href="{{contribsUrl}}" target="_blank">
							{{{contribIcon}}}
							<span class="label" data-msg-id="chat-user-menu-contribs"> </span>
						</a>
					</li>
				</ul>
			</div>
		</div>
	{{/viewedUsersInfo}}
{{/hasUsers}}
