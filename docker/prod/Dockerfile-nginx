FROM nginx:1.14.0

RUN chown -R nginx:nginx /etc/nginx && \
    chown nginx:nginx /var/cache/nginx && \
    chown -R nginx:nginx /var/log/nginx && \
    mkdir /var/run/nginx && \
    chown nginx:nginx /var/run/nginx

ADD app/docker/prod/nginx.conf /etc/nginx/nginx.conf
ADD app/docker/prod/site.conf /etc/nginx/conf.d/default.conf

# static mediawiki files
ADD app/skins /usr/wikia/slot1/current/src/skins
ADD app/resources /usr/wikia/slot1/current/src/resources
ADD app/extensions /usr/wikia/slot1/current/src/extensions

USER nginx

# validate configuration files for syntax errors
RUN nginx -c /etc/nginx/nginx.conf -t
